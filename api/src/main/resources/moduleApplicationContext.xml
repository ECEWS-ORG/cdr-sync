<?xml version="1.0" encoding="UTF-8"?>

<!-- Beans to add to the current Application context definition -->

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  		    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
  		    http://www.springframework.org/schema/context
  		    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:component-scan base-package="org.openmrs.module.cdrsync" />

    <!-- Wraps CdrsyncService methods in DB transactions and OpenMRS interceptors,
    which set audit info like dateCreated, changedBy, etc.-->
    <bean id="cdrsync.CdrsyncService"
            class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager" />
        </property>
        <property name="target">
            <bean class="org.openmrs.module.cdrsync.api.impl.CdrsyncServiceImpl">
                <property name="dao" ref="cdrsync.CdrsyncDao" />
            </bean>
        </property>
        <property name="preInterceptors">
            <ref bean="serviceInterceptors" />
        </property>
        <property name="transactionAttributeSource">
            <ref bean="transactionAttributeSource" />
        </property>
    </bean>
    <bean id="cdrsync.BiometricInfoDao" class="org.openmrs.module.cdrsync.api.dao.impl.BiometricInfoDaoImpl">
        <property name="sessionFactory">
            <ref bean="dbSessionFactory"/>
        </property>
    </bean>
    <bean id="cdrsync.BiometricVerificationInfoDao" class="org.openmrs.module.cdrsync.api.dao.impl.BiometricVerificationInfoDaoImpl">
        <property name="sessionFactory">
            <ref bean="dbSessionFactory"/>
        </property>
    </bean>
    <bean id="cdrsync.CdrSyncPatientDao" class="org.openmrs.module.cdrsync.api.dao.impl.CdrSyncPatientDaoImpl">
        <property name="sessionFactory">
            <ref bean="dbSessionFactory"/>
        </property>
    </bean>
    <bean id="cdrSync.CdrSyncAdminDao" class="org.openmrs.module.cdrsync.api.dao.impl.CdrSyncAdminDaoImpl">
        <property name="sessionFactory">
            <ref bean="dbSessionFactory" />
        </property>
    </bean>
    <bean id="cdrsync.BiometricInfoService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager" />
        </property>
        <property name="target">
            <bean class="org.openmrs.module.cdrsync.api.impl.BiometricInfoServiceImpl">
                <property name="dao" ref="cdrsync.BiometricInfoDao" />
            </bean>
        </property>
        <property name="preInterceptors">
            <ref bean="serviceInterceptors" />
        </property>
        <property name="transactionAttributeSource">
            <ref bean="transactionAttributeSource" />
        </property>
    </bean>
    <bean id="cdrsync.BiometricVerificationInfoService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager" />
        </property>
        <property name="target">
            <bean class="org.openmrs.module.cdrsync.api.impl.BiometricVerificationInfoServiceImpl">
                <property name="dao" ref="cdrsync.BiometricVerificationInfoDao" />
            </bean>
        </property>
        <property name="preInterceptors">
            <ref bean="serviceInterceptors" />
        </property>
        <property name="transactionAttributeSource">
            <ref bean="transactionAttributeSource" />
        </property>
    </bean>
    <bean id="cdrsync.CdrSyncPatientService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager" />
        </property>
        <property name="target">
            <bean class="org.openmrs.module.cdrsync.api.impl.CdrSyncPatientServiceImpl">
                <property name="dao" ref="cdrsync.CdrSyncPatientDao" />
            </bean>
        </property>
        <property name="preInterceptors">
            <ref bean="serviceInterceptors" />
        </property>
        <property name="transactionAttributeSource">
            <ref bean="transactionAttributeSource" />
        </property>
    </bean>
    <bean id="cdrsync.CdrSyncAdminService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager" />
        </property>
        <property name="target">
            <bean class="org.openmrs.module.cdrsync.api.impl.CdrSyncAdminServiceImpl">
                <property name="dao" ref="cdrSync.CdrSyncAdminDao" />
            </bean>
        </property>
        <property name="preInterceptors">
            <ref bean="serviceInterceptors" />
        </property>
        <property name="transactionAttributeSource">
            <ref bean="transactionAttributeSource" />
        </property>
    </bean>
